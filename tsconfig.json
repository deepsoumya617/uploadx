{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"],
    "resolveJsonModule": true,
    "ignoreDeprecations": "6.0",
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@utils/*": ["utils/*"],
      "@middleware/*": ["middleware/*"],
      "@config/*": ["config/*"],
      "@db/*": ["db/*"],
      "@errors/*": ["errors/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
